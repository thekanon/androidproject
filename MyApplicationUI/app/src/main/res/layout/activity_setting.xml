<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplicationui.User_Interface.SettingActivity">

    <SeekBar
        android:id="@+id/speedBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:max="10"
        android:progress="3"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/voiceText"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="53dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="53dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/speedBarText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/speedBarText"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:text="음성속도"
        android:gravity="center"
        android:textSize="50sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="48dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/voiceText"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:text="목소리종류"
        android:textSize="50sp"
        android:gravity="center"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="43dp"
        app:layout_constraintBottom_toBottomOf="@+id/radioGroup1"
        android:layout_marginEnd="43dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/speedBarText"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.29" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="0dp"
        android:layout_height="101dp"
        android:layout_marginBottom="168dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/voiceText"
        app:layout_constraintRight_toRightOf="@+id/voiceText"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">

        <RadioButton
            android:id="@+id/voiceBtnW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="여자"
            android:textSize="40sp"

            tools:layout_editor_absoluteX="209dp"
            tools:layout_editor_absoluteY="206dp" />

        <RadioButton
            android:id="@+id/voiceBtnM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="남자"
            android:textSize="40sp"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="206dp" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>
